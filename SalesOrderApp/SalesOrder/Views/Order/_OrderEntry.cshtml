<div class="modal fade text-left" id="order-entry-modal" tabindex="-1" role="dialog" aria-labelledby="reassign-modal-label" aria-hidden="true" style="z-index:1051;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h6 class="modal-title text-white" id="reassign-modal-label">Order <span id="option">Entry</span></h6>
                <button type="button" class="close text-white" onclick="CloseModalPopup();" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-fixed">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="documentNo">Order Name<span class="text-danger ml-005"></span></label>
                            <input type="text" id="orderName" class="form-control" placeholder="Enter Order Name" autocomplete="on">
                            <input type="hidden" id="hdnOrderId" />           
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="documentNo">State<span class="text-danger ml-005"></span></label>
                            <input type="text" id="state" class="form-control" placeholder="Enter State" autocomplete="on">         
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-md-12 float-right">
                        <div class="form-group">
                            <button type="button" class="btn btn-info" id="btn-order-save">Save</button>
                            <button type="button" id="btn_close" class="btn grey btn-secondary" onclick="CloseModalPopup();" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
